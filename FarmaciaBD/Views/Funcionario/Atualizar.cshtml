@model List<FarmaciaBD.Models.Funcionario>
@{ Layout = "_Layout";
    ViewBag.Title = "Funcionário";
}

<br /> <br />
<h2 style="text-align: center">Atualizando Funcionário</h2>
@foreach (var funcionario in Model)
{
    <p>Matrícula do funcionário: @funcionario.Matricula</p>

    <form method="post">
        <input type="hidden" name="matricula" value="@funcionario.Matricula" />
        <div class="row g-3">
            <div class="col-12">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" name="nome" class="form-control" value="@funcionario.Nome" id="nome">
                <a style="color:red">
                    @Html.ValidationMessage("nome")
                </a>
            </div>
            <div class="col-md-6">
                <label for="nascimento" class="form-label">Data de Nascimento</label>
                <input type="text" name="nascimento" class="form-control" value="@funcionario.Nascimento" id="nascimento">

                <a style="color:red">
                    @Html.ValidationMessage("nascimento")
                </a>
            </div>
            <div class="col-md-6">
                <label for="cargo" class="form-label">Cargo</label>
                <input type="text" name="cargo" class="form-control" value="@funcionario.Cargo" id="cargo">

                <a style="color:red">
                    @Html.ValidationMessage("cargo")
                </a>
            </div>
            <div class="col-md-4">
                <label for="sexo" class="form-label">Sexo</label>
                <input type="text" name="sexo" class="form-control" value="@funcionario.Sexo" id="sexo">

                <a style="color:red">
                    @Html.ValidationMessage("sexo")
                </a>
            </div>
            <div class="col-md-4">
                <label for="salario" class="form-label">Salário</label>
                <input type="text" name="salario" class="form-control" value="@funcionario.Salario" id="salario">

                <a style="color:red">
                    @Html.ValidationMessage("salario")
                </a>
            </div>

            <div class="col-md-4">
                <label for="loja_numero" class="form-label">Número da loja em que trabalha</label>
                <input type="text" name="loja_numero" class="form-control" value="@funcionario.Loja_numero" id="loja_numero">
                <a style="color:red">
                    @Html.ValidationMessage("loja_numero")
                </a>
            </div>

        </div>
        <button type="submit" class="btn btn-secondary">Salvar</button>
    </form>
}
